<!DOCTYPE html>
<html>
<head>
	<title>	Movie App </title>
	<%- include ('head') %>
</head>
<body>

	<%- include ('navbar') %>

	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1>
					Estreando no cinema
				</h1>
			</div>
			<div class="col-sm-12">
				<% results.forEach((movie) => { %>
					<a href="/movie/<%= movie.id %>">
						<div class="col-md-3 col-sm-4 poster">
							<img crossorigin="anonymous" src="<%= imageBaseUrl + movie.poster_path %>" />
						</div>
					</a>
				<% }) %>
			</div>
		</div>
	</div>
</body>
</html>